<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset="utf-8">
    <!-- Vérifie la compabilité IE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Compabilité mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Site Saas{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bootstrap/css/clean-blog.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bootstrap/css/full-slider.css') }}" rel="stylesheet">
        <link href="{{ asset('style.css" rel="stylesheet') }}">
    {% endblock %}

    <title></title>

    <!-- Code à rajouter pour les navigateurs ne prennant pas en compte HTML5 et CSS3 (attention Respond.js peut ne pas fonctionner avec les CDN -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    {% block javascript_header %}
    <!--[if lt IE 9] >
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    < [endif]-->
    {% endblock %}
</head>

<body>
    <!-- Barre de navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header page-scroll">
                <a style="margin-top: -50px;" class="navbar-brand" href="{{ path('page_d_accueil') }}">
                    <img style="margin-top: 40px;" src="{{asset('img/logo_nav.png')}}"/>
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('page_d_accueil') }}">Accueil</a></li>
                    <li><a href="#">Pour Qui ?</a></li>
                    <li><a href="#">Bénéfices</a></li>
                    <li><a href="#">Web/Mobile</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">Connexion/Inscription</a></li>
                </ul>
            </div>
        </div>
    </nav>
    {% block header %}
    {% endblock %}
    {% block body %}
    {% endblock %}

    <!-- Le pied de page -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <hr class="small-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="{{ path('page_contact') }}" class="footer-font">Nous écrire</a>
                        </li>
                        <li>
                            <a href="{{ path('page_faq') }}" class="footer-font">FAQ</a>
                        </li>
                        <li>
                            <a href="#"class="footer-font">Mentions Légales</a>
                        </li>
                        <li>
                            <a href="#"class="footer-font">CGV</a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; 2015</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Script JavaScript -->
    <script src="{{ asset('bootstrap/js/jquery.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/clean-blog.min.js') }}"></script>
    {%  block javascript %}
    {% endblock %}

</body>
</html>